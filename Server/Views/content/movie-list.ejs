<div class="container">
    <h1>Movie List</h1>

    <div class="row">
        <div class="col">

            <a href="/add" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-circle-plus"></i> Add Movie</a>
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Year</th>
                        <th scope="col">Director</th>
                        <th scope="col">Rating</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="movieList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < movies.length; count++) { %>
                        <!-- Create a new Table Row-->
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= movies[count].Name %></td>
                            <td><%= movies[count].Year %></td>
                            <td><%= movies[count].Director %></td>
                            <td><%= movies[count].Rating %></td>
                            <td class="text-center"><a href="/edit/<%= movies[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
                            <td class="text-center"><a href="/delete/<%= movies[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fa-solid fa-trash-can"></i> Delete</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>